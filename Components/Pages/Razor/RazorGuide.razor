@code {
    private int counter1 = 0;
    private string message = "לחץ על הכפתור כדי לעדכן את הודעה זו";
    private string currentTime = DateTime.Now.ToString("HH:mm:ss");

    private void IncrementCounter1()
    {
        counter1++;
    }

    private void UpdateMessage()
    {
        message = "ההודעה עודכנה בשעה " + DateTime.Now.ToString("HH:mm:ss");
    }

    private void UpdateTime()
    {
        currentTime = DateTime.Now.ToString("HH:mm:ss");//עדכון השעה
    }
}
