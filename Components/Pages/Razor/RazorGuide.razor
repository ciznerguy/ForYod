@page "/razor-guide-tabs"

<h3>Razor Guide</h3>

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="code-tab" data-toggle="tab" href="#code" role="tab" aria-controls="code" aria-selected="true">Code</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="result-tab" data-toggle="tab" href="#result" role="tab" aria-controls="result" aria-selected="false">Result</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="code" role="tabpanel" aria-labelledby="code-tab">
        <pre>
        <code>
@page "/"
<h1>Hello,</h1>
<p>My name is @displayName and the current date is: @DateTime.Now.ToString()</p>

                @code
                {
                    string displayName = "gadi";
}
            </code>
        </pre>
    </div>
    <div class="tab-pane fade" id="result" role="tabpanel" aria-labelledby="result-tab">
        <h1>Hello,</h1>
        <p>My name is @name and the current date is: @DateTime.Now.ToString()</p>
    </div>
</div>

@code
{
    string name = "gadi";
}
